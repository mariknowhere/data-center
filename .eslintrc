{
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "rules": {
    "prefer-const": "error",
    "quotes": ["warn", "single"],
    "jsx-quotes": ["warn", "prefer-double"],
    "comma-dangle": ["warn", "always-multiline"],
    "import/order": ["warn", {
      "groups": ["builtin", "external", "internal", "parent", "sibling", "index", "object", "type"],
      "newlines-between": "always-and-inside-groups"
    }],
    "no-console": "warn",
    "indent": ["warn", 2],
    "semi": ["warn", "always"],
    "no-useless-escape": "off"
  }
}
